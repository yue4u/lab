{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "vitest/importMeta"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "react": ["site/types/disable-react-jsx.d.ts"]
    }
  },
  "include": [
    "site/types/*.ts",
    "site/**/*.ts",
    "site/**/*.d.ts",
    "site/**/*.tsx",
    "site/**/*.vue",
    "projects/**/*.ts",
    "projects/**/*.d.ts",
    "projects/**/*.tsx",
    "projects/**/*.vue",
    "vite.config.ts"
  ]
}
